@{
    ViewBag.Title = "Register";
}


<div class="container-fluid page-header py-5">
    <h1 class="opacity-0 text-center text-white display-5">...</h1>
</div>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-12">
                <h2>Đăng nhập</h2>

                @using (Html.BeginForm())
                {
                    <div class="form-group my-2">
                        <label class="control-label col-md-2" for="username">Tên đăng nhập</label>
                        <input class="form-control" type="text" name="username" id="username" required />
                    </div>
                    <div class="form-group my-2">
                        <label class="control-label col-md-2" for="password">Mật khẩu</label>
                        <input class="form-control" type="password" name="password" id="password" required />
                    </div>
                    <div class="form-group my-2">
                        <label style="color: red" class="control-label col-md-2">@ViewBag.checkLogin</label>
                    </div>
                    <button class="btn btn-outline-primary my-2" type="submit">Đăng nhập</button>
                }

                @if (!String.IsNullOrEmpty(ViewBag.Error))
                {
                    <p style="color:red">@ViewBag.Error</p>
                }
            </div>
        </div>
    </div>
</div>
