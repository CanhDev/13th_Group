@model Team_13st.Models.GioHang

@{
    ViewBag.Title = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = 0;
    int count = 0;
}


<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="opacity-0 text-center text-white display-5">...</h1>
</div>

<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            @if (Model.ItemCarts.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col">Tên rượu</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng tiền</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ItemCarts)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/Ruou/@item.SanPham.Image" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                    </div>
                                </th>
                                <td>
                                    <p class="mb-0 mt-4">@item.SanPham.ProductName</p>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">$@item.SanPham.Price</p>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@item.SoLuong</p>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">$@(item.SoLuong * item.SanPham.Price)</p>
                                </td>
                                <td>
                                    <a href="@Url.Action("removeItem", "Cart", new {id = item.itemCartID}, null)" class="btn btn-md rounded-circle bg-light border mt-4">
                                        <i class="fa fa-times text-danger"></i>
                                    </a>
                                </td>

                            </tr>
                            //
                            if ((item.SanPham.Price * item.SoLuong).HasValue)
                            {
                                var temp = item.SanPham.Price * item.SoLuong.GetValueOrDefault();
                                total += temp;
                                count++;
                            }

                        }
                        <tr>
                            <td>
                                <a href="@Url.Action("RemoveAllItem", "Cart", new {idCart = Model.MaGioHang}, null)" class="btn btn-outline-danger">Xóa hết</a>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <h2>Bạn chưa thêm sản phẩm nào</h2>
            }
        </div>
        @*checkout*@
        @if (Model.ItemCarts.Any())
        {
            <div class="row g-4 justify-content-end">
                <div class="col-8"></div>
                <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                    <div class="bg-light rounded">
                        <div class="p-4">
                            <h1 class="display-6 mb-4">Thanh Toán</h1>
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="mb-0 me-4">số loại sản phẩm</h5>
                                <p class="mb-0">@count</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h5 class="mb-0 me-4">Phương thức thanh toán</h5>
                                <div class="">
                                    <p class="mb-0">Thanh toán khi nhận hàng</p>
                                </div>
                            </div>
                        </div>
                        <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                            <h5 class="mb-0 ps-4 me-4">Tổng tiền</h5>
                            <p class="mb-0 pe-4">$@total</p>
                        </div>
                        <a href="@Url.Action("HandleOrder", "Order", new {count, total, idCart = Model.MaGioHang}, null)" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">Đặt hàng</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
<!-- Cart Page End -->